---
import { CheckCircle, Megaphone, Users } from "lucide-react";

const features = [
  {
    icon: CheckCircle,
    title: "For Concept Validation",
    description:
      "Test designs in the market before production. No more expensive samples.",
    color: "text-[#0077B6]",
  },
  {
    icon: Megaphone,
    title: "For Marketing",
    description:
      "Unlock targeted, infinite creative potential for your products and boost engagement effortlessly.",
    color: "text-[#FFD100]",
  },
  {
    icon: Users,
    title: "For Social Media",
    description:
      "Create scroll-stopping visuals that break through short attention spans.",
    color: "text-[#5C0A98]",
  },
];
---

<section
  class="py-20 bg-[#2C2C2C] bg-[radial-gradient(#1C1C1C,transparent_1px)] [background-size:16px_16px]"
>
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold mb-12 text-center">Create Like a Pro</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        features.map((feature) => (
          <div class="backdrop-blur-md bg-white/5 rounded-2xl p-6 flex flex-col items-center text-center hover:bg-white/10 transition-colors duration-300">
            <feature.icon className={`h-12 w-12 mb-4 ${feature.color}`} />
            <h3 class="text-2xl font-semibold mb-4">{feature.title}</h3>
            <p class="text-gray-300">{feature.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
